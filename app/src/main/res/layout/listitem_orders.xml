<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconaOrdine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:src="@android:drawable/ic_menu_directions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconaMappa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:src="@android:drawable/ic_dialog_map"
        app:layout_constraintEnd_toStartOf="@+id/Indirizzo"
        app:layout_constraintStart_toEndOf="@+id/idOrdine"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Indirizzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iconaMappa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconaMappa"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/idOrdine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="23dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iconaOrdine"
        app:layout_constraintEnd_toStartOf="@+id/iconaMappa"
        app:layout_constraintStart_toEndOf="@+id/iconaOrdine"
        app:layout_constraintTop_toTopOf="@+id/iconaOrdine" />

</androidx.constraintlayout.widget.ConstraintLayout>